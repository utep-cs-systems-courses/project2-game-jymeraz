#include <msp430.h>
#include "libTimer.h"
#include "buzzer.h"
#include "led.h"

void buzzer_init()
{
    /* 
       Direct timer A output "TA0.1" to P2.6.  
        According to table 21 from data sheet:
          P2SEL2.6, P2SEL2.7, anmd P2SEL.7 must be zero
          P2SEL.6 must be 1
        Also: P2.6 direction must be output
    */
    timerAUpmode();		/* used to drive speaker */
    P2SEL2 &= ~(BIT6 | BIT7);
    P2SEL &= ~BIT7; 
    P2SEL |= BIT6;
    P2DIR = BIT6;		/* enable output to speaker (P2.6) */
}

void buzzer_set_period(short cycles) /* buzzer clock = 2MHz.  (period of 1k results in 2kHz tone) */
{
  CCR0 = cycles; 
  CCR1 = cycles >> 1;		/* one half cycle */
}

void buzzerOff() {
  buzzer_set_period(0);
}

static int song1_count = 0;
void song1() {
   song1_count ++;
   
   if (song1_count == 125)
     buzzer_set_period(numerator/D_5); // d eigth
   if (song1_count == 250)
     buzzer_set_period(0); // off
   if (song1_count == 260)
     buzzer_set_period(numerator/G_5); // g eighth  
   if (song1_count == 385)
     buzzer_set_period(0); // off
   if (song1_count == 395)
     buzzer_set_period(numerator/G_5); // g quarter
   if (song1_count == 645)
     buzzer_set_period(0); // off
   if (song1_count == 655)
     buzzer_set_period(numerator/G_5); // g quarter tied
   if (song1_count == 905)
     buzzer_set_period(0); // off
   if (song1_count == 915)
     buzzer_set_period(numerator/G_5); // g quarter tied
   if (song1_count == 1165)
     buzzer_set_period(numerator/F_sharp_5); // f eighth
   if (song1_count == 1290)
     buzzer_set_period(0); // off
   if (song1_count == 1300)
     buzzer_set_period(numerator/F_sharp_5); // f quarter
   if (song1_count == 1550)
     buzzer_set_period(0); // off
   if (song1_count == 1560)
     buzzer_set_period(numerator/E_5); // e eigth
   if (song1_count == 1685) // off
     buzzer_set_period(0);
   if (song1_count == 1695) // d eighth
     buzzer_set_period(numerator/D_5);
   if (song1_count == 1820) // e eighth 
     buzzer_set_period(numerator/E_5);
   if (song1_count == 1945) // d quarter
     buzzer_set_period(numerator/D_5);
   if (song1_count == 2195) // off
     buzzer_set_period(0);
   if (song1_count == 2205) // d eigth 
     buzzer_set_period(numerator/D_5);
   if (song1_count == 2330) // off
     buzzer_set_period(0);
   if (song1_count == 2340)
     buzzer_set_period(numerator/C_5);
   if (song1_count == 2590)
     buzzer_set_period(numerator/B_4);
   if (song1_count == 2840)
     buzzer_set_period(numerator/A_4);
   if (song1_count == 3090)
     buzzer_set_period(numerator/G_4);
   if (song1_count == 3340)
     buzzer_set_period(0);
   if (song1_count == 3465) // c quarter
     buzzer_set_period(numerator/C_5);
   if (song1_count == 3715) // b eigthth
     buzzer_set_period(numerator/B_4);
   if (song1_count == 3840) // a eigth
     buzzer_set_period(numerator/A_4);
   if (song1_count == 3965) // g quarter
     buzzer_set_period(numerator/G_4);
   if (song1_count == 4215) // off eighth
     buzzer_set_period(0);
   if (song1_count == 4340) // g eighth
     buzzer_set_period(numerator/G_5);
   if (song1_count == 4465) // off eighth
     buzzer_set_period(0);
   if (song1_count == 4590) // g eighth
     buzzer_set_period(numerator/G_5);
   if (song1_count == 4715)
     buzzer_set_period(0);
   if (song1_count == 4725) // g quarter
     buzzer_set_period(numerator/G_5);
   if (song1_count == 4975) // off eighth
     buzzer_set_period(0);
   if (song1_count == 5100) // g quarter
     buzzer_set_period(numerator/G_5);
   if (song1_count == 5350) // f qighth
     buzzer_set_period(numerator/F_sharp_5);
   if (song1_count == 5475) // off eighth
     buzzer_set_period(0);
   if (song1_count == 5600) // e eighth
     buzzer_set_period(numerator/E_5);
   if (song1_count == 5725) // off
     buzzer_set_period(0);
   if (song1_count == 5735) // e quarter
     buzzer_set_period(numerator/E_5);
   if (song1_count == 5985) // d quarter
     buzzer_set_period(numerator/D_5);
   if (song1_count == 6235)
     buzzer_set_period(0);
   if (song1_count == 6245) // d eighth
     buzzer_set_period(numerator/D_5);
   if (song1_count == 6360) // c for 3
     buzzer_set_period(numerator/C_5);
   if (song1_count == 6735)
     buzzer_set_period(0);
   if (song1_count == 6745) // c eighth
     buzzer_set_period(numerator/C_5);
   if (song1_count == 6870)
     buzzer_set_period(0);
   if (song1_count == 6880) // c eighth
     buzzer_set_period(numerator/C_5);
   if (song1_count == 7005) // d for 3
     buzzer_set_period(numerator/D_5);
   if (song1_count == 7280)
     buzzer_set_period(0);
   if (song1_count == 7290) // d for 3
     buzzer_set_period(numerator/D_5);
   if (song1_count == 7665) // a eighth
     buzzer_set_period(numerator/A_4);
   if (song1_count == 7790) // b quarter
     buzzer_set_period(numerator/B_4);
   if (song1_count == 8040) // a eighth
     buzzer_set_period(numerator/A_4);
   if (song1_count == 8165) // g eighth
     buzzer_set_period(numerator/G_4);
   if (song1_count == 8290)
     buzzer_set_period(numerator/G_5);
   if (song1_count >= 8790)
     buzzer_set_period(0);
}

static int song2_count = 0;
void song2() {
  song2_count ++;

  if (song2_count == 250) { // d eighth
    buzzer_set_period(numerator/D_6);
    greenControl(1);
    redControl(0);
  }
  if (song2_count == 375) {
    buzzer_set_period(0);
    greenControl(0);
    redControl(1);
  }
  if (song2_count == 385) { // d eighth
    buzzer_set_period(numerator/D_6);
    greenControl(0);
    redControl(1);
  }
  if (song2_count == 510) { // c for 3
    buzzer_set_period(numerator/C_sharp_6);
    greenControl(1);
    redControl(0);
  }
  if (song2_count == 885) { // b eighth
    buzzer_set_period(numerator/B_5);
    greenControl(0);
    redControl(1);
  }
  if (song2_count == 1010) { //  a eighth
    buzzer_set_period(numerator/A_5);
    greenControl(1);
    redControl(0);
  }
  if (song2_count == 1135) { // g eighth
    buzzer_set_period(numerator/G_sharp_5);
    greenControl(0);
    redControl(1);
  }
  if (song2_count == 1260) { // b quarter
    buzzer_set_period(numerator/B_5);
    greenControl(1);
    redControl(0);
  }
  if (song2_count == 1510) {// a eighth
    buzzer_set_period(numerator/A_5);
    greenControl(0);
    redControl(1);
  }
  if (song2_count == 1635) { // g eighth
    buzzer_set_period(numerator/G_sharp_5);
    greenControl(1);
    redControl(0);
  }
  if (song2_count == 1760) { // a eighth
    buzzer_set_period(numerator/A_5);
    greenControl(0);
    redControl(1);
  }
  if (song2_count == 1885) {// b eighth
    buzzer_set_period(numerator/B_5);
    greenControl(1);
    redControl(0);
  }
  if (song2_count == 2010) {// c quarter
    buzzer_set_period(numerator/C_sharp_6);
    greenControl(0);
    redControl(1);
  }
  if (song2_count == 2260) { // d quarter
    buzzer_set_period(numerator/D_6);
    greenControl(1);
    redControl(0);
  }
  if (song2_count == 2510) { // b quarter
    buzzer_set_period(numerator/B_5);
    greenControl(0);
    redControl(1);
  }
  if (song2_count == 2760) {// a for 6
    buzzer_set_period(numerator/A_5);
    greenControl(1);
    redControl(1);
  }
  if (song2_count >= 3510) {
    buzzer_set_period(0);
    greenControl(0);
    redControl(0);
  }
}
